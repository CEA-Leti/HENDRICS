FROM seciiot/simulator:arm64

ARG SCENARIO="hydro"
LABEL scenario=$SCENARIO
ENV SCENARIO $SCENARIO

COPY process-simulator/scenarios/$SCENARIO /opt/process-simulator/scenarios/$SCENARIO

# Start simulator.
CMD python3 /opt/process-simulator/scenarios/$SCENARIO/$SCENARIO.py
