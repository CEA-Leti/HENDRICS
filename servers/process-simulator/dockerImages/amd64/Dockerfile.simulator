FROM python:3.10-alpine

# Define useful labels.
LABEL version="2.0.1"
LABEL maintainer="Maxime.Puys@cea.fr"
LABEL vendor="IRT-PULSE"

# Switch to root user.
USER root

# Install required packets.
RUN pip3 install --upgrade pip

# Include path to simulator in python's path.
ENV PYTHONPATH "${PYTHONPATH}:/opt/process-simulator"

# Install required python packages.
COPY process-simulator/requirements.txt /opt/process-simulator/
RUN cd /opt/process-simulator && pip3 install -r requirements.txt

COPY process-simulator/simulator /opt/process-simulator/simulator

ARG SIMU_FACTOR="0.5"
LABEL simuFactor=$SIMU_FACTOR
ENV SIMU_FACTOR $SIMU_FACTOR

ARG REDIS_HOST="redis"
LABEL restHost=$REDIS_HOST
ENV REDIS_HOST $REDIS_HOST
